<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="container mx-auto px-4 py-8 max-w-6xl mt-16 p-8">
    <!-- En-tête amélioré -->
    <div class="text-center mb-12">
      <!-- Logo et titre -->
      <div class="flex items-center justify-center mb-6">
        <div class="flex items-center space-x-4">
          <%= image_tag "logo.png", class: "w-24 h-24", alt: "NutriFlow Logo" %>
          <div class="text-left">
            <h1 class="text-5xl font-bold bg-gradient-to-r from-blue-600 to-indigo-700 bg-clip-text text-transparent">
              NutriFlow
            </h1>
            <div class="w-full h-1 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full mt-2"></div>
          </div>
        </div>
      </div>

      <!-- Description améliorée -->
      <div class="max-w-3xl mx-auto">
        <p class="text-2xl font-medium text-gray-700 mb-4 leading-relaxed">
          Votre compagnon nutritionnel intelligent
        </p>
      </div>
    </div>

    <!-- Quadrillage de vignettes -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl mx-auto">

      <!-- Vignette Calendrier -->
      <div class="group">
        <a href="<%= calendars_path %>" class="block">
          <div class="bg-white rounded-xl shadow-lg p-6 h-64 transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl hover:bg-gradient-to-br hover:from-blue-50 hover:to-indigo-50">
            <div class="flex items-center justify-center h-16 w-16 bg-blue-100 rounded-lg mb-4 mx-auto group-hover:bg-blue-200 transition-colors">
              <i class="fas fa-calendar-alt text-3xl text-blue-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2 text-center">Calendrier</h3>
            <p class="text-gray-600 text-center">Suivez votre alimentation jour par jour avec notre calendrier interactif</p>
          </div>
        </a>
      </div>

      <!-- Vignette Aliments -->
      <div class="group">
        <a href="<%= foods_path %>" class="block">
          <div class="bg-white rounded-xl shadow-lg p-6 h-64 transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl hover:bg-gradient-to-br hover:from-green-50 hover:to-emerald-50">
            <div class="flex items-center justify-center h-16 w-16 bg-green-100 rounded-lg mb-4 mx-auto group-hover:bg-green-200 transition-colors">
              <i class="fas fa-apple-alt text-3xl text-green-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2 text-center">Aliments</h3>
            <p class="text-gray-600 text-center">Gérez votre base de données d'aliments et leurs informations nutritionnelles</p>
          </div>
        </a>
      </div>


      <!-- Vignette Besoins Caloriques -->
      <div class="group">
        <a href="<%= daily_calorie_requirement_path %>" class="block">
          <div class="bg-white rounded-xl shadow-lg p-6 h-64 transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl hover:bg-gradient-to-br hover:from-orange-50 hover:to-amber-50">
            <div class="flex items-center justify-center h-16 w-16 bg-orange-100 rounded-lg mb-4 mx-auto group-hover:bg-orange-200 transition-colors">
              <i class="fas fa-chart-line text-3xl text-orange-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2 text-center">Besoins Caloriques</h3>
            <p class="text-gray-600 text-center">Découvrez vos besoins caloriques quotidiens personnalisés</p>
          </div>
        </a>
      </div>

      <!-- Vignette Profil -->
      <div class="group">
        <a href="<%= profile_path %>">
          <div class="bg-white rounded-xl shadow-lg p-6 h-64 transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl hover:bg-gradient-to-br hover:from-purple-50 hover:to-violet-50">
            <div class="flex items-center justify-center h-16 w-16 bg-purple-100 rounded-lg mb-4 mx-auto group-hover:bg-purple-200 transition-colors">
              <i class="fas fa-user-circle text-3xl text-purple-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2 text-center">Profil</h3>
            <p class="text-gray-600 text-center">Consultez et modifiez vos informations personnelles et objectifs</p>
          </div>
        </a>
      </div>

      <!-- Vignette Recettes -->
      <div class="group">
        <a href="<%= recipes_path %>" class="block">
          <div class="bg-white rounded-xl shadow-lg p-6 h-64 transform transition-all duration-300 group-hover:scale-105 group-hover:shadow-xl hover:bg-gradient-to-br hover:from-red-50 hover:to-pink-50">
            <div class="flex items-center justify-center h-16 w-16 bg-red-100 rounded-lg mb-4 mx-auto group-hover:bg-red-200 transition-colors">
              <i class="fas fa-utensils text-3xl text-red-600"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-800 mb-2 text-center">Recettes</h3>
            <p class="text-gray-600 text-center">Créez et gérez vos recettes personnalisées avec leurs ingrédients</p>
          </div>
        </a>
      </div>
    </div>

  </div>
</div>
