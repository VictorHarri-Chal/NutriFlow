<div data-sidebar-target="desktopSideMenu" class="hidden md:w-64 md:flex-col md:fixed md:inset-y-0 md:flex">
  <div class="flex-1 flex flex-col min-h-0 bg-white shadow-lg">
    <div class="flex-1 flex flex-col pb-4 overflow-y-auto">
      <div class="flex items-center flex-shrink-0 justify-between px-4 py-4 border-b border-gray-200 bg-gradient-to-r from-blue-700 to-blue-900">
        <div class="flex items-center">
          <h1 class="text-white text-xl font-bold">NutriFlow</h1>
        </div>
        <button class="ml-1 flex items-center justify-center h-8 w-8 rounded-lg bg-white bg-opacity-20 hover:bg-opacity-30" data-action="click->sidebar#desktopToggle">
          <span class="sr-only">Fermer la sidebar</span>
          <i class="fas fa-times text-white"></i>
        </button>
      </div>
      <div class="flex-shrink-0 flex p-4 justify-between border-b border-gray-100">
        <div class="flex-shrink-0 group block">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="h-10 w-10 rounded-full bg-blue-600 flex items-center justify-center">
                <i class="fas fa-user text-white"></i>
              </div>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-gray-900">Mon Profil</p>
              <p class="text-xs font-medium text-gray-500 group-hover:text-gray-700">Utilisateur NutriFlow</p>
            </div>
          </div>
        </div>
      </div>
      <nav class="mt-6 flex flex-col h-full px-4">
        <div class="space-y-2">
          <%= link_to root_path, class: "flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg #{current_page?(root_path) ? 'bg-blue-100 text-blue-600' : ''}" do %>
            <i class="fas fa-home w-5 h-5 mr-3"></i>
            <span class="font-medium">Accueil</span>
          <% end %>
          <%= link_to foods_path, class: "flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg #{current_page?(foods_path) ? 'bg-blue-100 text-blue-600' : ''}" do %>
            <i class="fas fa-utensils w-5 h-5 mr-3"></i>
            <span class="font-medium">Aliments</span>
          <% end %>
          <%= link_to calendars_path, class: "flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg #{current_page?(calendars_path) ? 'bg-blue-100 text-blue-600' : ''}" do %>
            <i class="fas fa-calendar-alt w-5 h-5 mr-3"></i>
            <span class="font-medium">Calendrier</span>
          <% end %>
          <div class="pt-4 border-t border-gray-100">
            <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg" do %>
              <i class="fas fa-chart-line w-5 h-5 mr-3"></i>
              <span class="font-medium">Statistiques</span>
            <% end %>
            <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg" do %>
              <i class="fas fa-cog w-5 h-5 mr-3"></i>
              <span class="font-medium">Paramètres</span>
            <% end %>
          </div>
        </div>
        <div class="mt-auto pt-4 border-t border-gray-100">
          <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg" do %>
            <i class="fas fa-question-circle w-5 h-5 mr-3"></i>
            <span class="font-medium">Aide</span>
          <% end %>
          <%= link_to "#", class: "flex items-center px-4 py-3 text-gray-700 hover:bg-red-50 hover:text-red-600 rounded-lg" do %>
            <i class="fas fa-sign-out-alt w-5 h-5 mr-3"></i>
            <span class="font-medium">Déconnexion</span>
          <% end %>
        </div>
      </nav>
    </div>
  </div>
</div>
