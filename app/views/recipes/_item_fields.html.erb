<div class="bg-white rounded-lg shadow-sm border border-gray-100 p-4" data-nested-form-target="item">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <div>
      <%= f.input :food_id,
                  label: "Aliment *",
                  collection: current_user.foods.order(:name),
                  label_method: :name,
                  value_method: :id,
                  include_blank: "— Sélectionner —",
                  input_html: { class: "w-full rounded-lg border border-gray-300 bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" },
                  label_html: { class: "font-medium text-gray-700 text-sm" } %>
    </div>

    <div>
      <%= f.input :quantity,
                  label: "Quantité (g) *",
                  as: :decimal,
                  input_html: { step: 1, min: 1, class: "w-full rounded-lg border border-gray-300 bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" },
                  label_html: { class: "font-medium text-gray-700 text-sm" } %>
    </div>

    <div class="flex items-end">
      <button type="button"
              class="w-full px-4 py-2 bg-red-50 text-red-700 border border-red-200 rounded-lg hover:bg-red-100 transition text-sm font-medium"
              data-action="nested-form#remove">
        <i class="fas fa-trash mr-2"></i>
        Supprimer
      </button>
      <%= f.hidden_field :_destroy, value: "false", data: { nested_form_target: "destroyField" } %>
    </div>
  </div>
</div>
