<% content_for :page_title do %>
  Recettes
<% end %>

<div class="max-w-7xl mx-auto mt-16 bg-white rounded-xl shadow-md p-8">
  <!-- En-tête avec titre, recherche et actions -->
  <header class="mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
      <!-- Titre -->
      <h1 class="text-2xl font-bold text-gray-900 flex-shrink-0">Mes recettes</h1>

      <!-- Barre de recherche -->
      <div class="flex-1 max-w-md lg:mx-6">
        <%= form_with url: recipes_path, method: :get, local: true, class: "relative" do |f| %>
          <%= text_field_tag :query, params[:query],
              class: "w-full pl-10 #{params[:query].present? ? 'pr-10' : 'pr-4'} py-1.5 text-sm bg-gray-50 border border-gray-200 rounded-md focus:outline-2 focus:outline-indigo-600 placeholder-gray-400",
              placeholder: "Rechercher une recette...",
              autocomplete: "off" %>

          <i class="fas fa-search absolute left-3 top-1/2 -translate-y-1/2 text-gray-400 pointer-events-none"></i>

          <% if params[:query].present? %>
            <%= link_to recipes_path, class: "absolute right-3 top-1/2 -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-colors" do %>
              <i class="fas fa-times"></i>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <!-- Bouton d'ajout -->
      <%= link_to new_recipe_path, class: "inline-flex items-center justify-center px-4 py-2 bg-blue-800 hover:bg-blue-600 text-white rounded-lg shadow-sm transition-colors font-medium flex-shrink-0" do %>
        <i class="fas fa-plus mr-2"></i>
        Nouvelle recette
      <% end %>
    </div>
  </header>

  <% if @recipes.any? %>
    <!-- Grille de cartes -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @recipes.each do |recipe| %>
        <%= link_to recipe_path(recipe), class: "block bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-all duration-200 hover:scale-[1.02]" do %>
          <!-- En-tête de la carte -->
          <div class="bg-gradient-to-r from-orange-50 to-amber-50 px-4 py-4 border-b border-gray-200">
            <div class="mb-3">
              <h3 class="font-semibold text-gray-800 text-lg"><%= recipe.name %></h3>
            </div>

            <!-- Macros avec icônes -->
            <div class="grid grid-cols-5 gap-2">
              <div class="text-center">
                <div class="flex items-center justify-center mb-1">
                  <i class="fas fa-weight-hanging text-indigo-600 text-sm"></i>
                </div>
                <div class="font-bold text-indigo-600 text-sm"><%= recipe.total_weight %></div>
                <div class="text-xs text-gray-500">g</div>
              </div>
              <div class="text-center">
                <div class="flex items-center justify-center mb-1">
                  <i class="fas fa-fire text-blue-600 text-sm"></i>
                </div>
                <div class="font-bold text-blue-600 text-sm"><%= recipe.total_calories %></div>
                <div class="text-xs text-gray-500">kcal</div>
              </div>
              <div class="text-center">
                <div class="flex items-center justify-center mb-1">
                  <i class="fas fa-dumbbell text-green-600 text-sm"></i>
                </div>
                <div class="font-bold text-green-600 text-sm"><%= recipe.total_proteins %></div>
                <div class="text-xs text-gray-500">Protéines</div>
              </div>
              <div class="text-center">
                <div class="flex items-center justify-center mb-1">
                  <i class="fas fa-bread-slice text-yellow-600 text-sm"></i>
                </div>
                <div class="font-bold text-yellow-600 text-sm"><%= recipe.total_carbs %></div>
                <div class="text-xs text-gray-500">Glucides</div>
              </div>
              <div class="text-center">
                <div class="flex items-center justify-center mb-1">
                  <i class="fas fa-oil-can text-red-600 text-sm"></i>
                </div>
                <div class="font-bold text-red-600 text-sm"><%= recipe.total_fats %></div>
                <div class="text-xs text-gray-500">Lipides</div>
              </div>
            </div>
          </div>

          <!-- Footer de la carte -->
          <div class="p-4">
            <div class="flex items-center justify-between text-sm text-gray-500">
              <span class="flex items-center">
                <i class="fas fa-clock mr-1"></i>
                <%= pluralize(recipe.recipe_items.size, "ingrédient") %>
              </span>
              <span class="flex items-center">
                <i class="fas fa-arrow-right text-gray-400"></i>
              </span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12 border-2 border-dashed border-gray-200 rounded-xl bg-gray-50">
      <div class="w-14 h-14 mx-auto mb-3 bg-white rounded-full flex items-center justify-center shadow-sm">
        <i class="fas fa-bowl-food text-blue-700 text-xl"></i>
      </div>
      <h3 class="text-lg font-semibold text-gray-900 mb-1">
        <% if params[:query].present? %>
          Aucune recette trouvée
        <% else %>
          Aucune recette
        <% end %>
      </h3>
      <p class="text-gray-600 mb-4">
        <% if params[:query].present? %>
          Aucune recette ne correspond à votre recherche "<%= params[:query] %>"
        <% else %>
          Créez votre première recette pour la retrouver ici.
        <% end %>
      </p>
      <% unless params[:query].present? %>
        <%= link_to new_recipe_path, class: "inline-flex items-center px-4 py-2 bg-blue-800 text-white rounded-lg shadow hover:bg-blue-600 transition font-medium" do %>
          <i class="fas fa-plus mr-2"></i>
          Nouvelle recette
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
