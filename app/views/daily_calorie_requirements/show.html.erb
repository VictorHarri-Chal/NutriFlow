<% content_for :page_title, "Besoins caloriques journaliers" %>

<div class="max-w-6xl mx-auto mt-16 bg-white rounded-xl shadow-md p-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Mes besoins caloriques journaliers</h1>
    <%= link_to profile_path, class: "inline-flex items-center px-4 py-2 bg-blue-800 text-white rounded-lg shadow hover:bg-blue-600 transition font-medium" do %>
      <i class="fas fa-user-edit mr-2"></i>
      Aller au profil
    <% end %>
  </div>

  <!-- Section Informations du profil -->
  <div class="bg-gray-50 rounded-lg p-6 mb-6">
    <div class="flex items-center mb-4">
      <div>
        <h2 class="text-xl font-semibold text-gray-900">Informations du profil</h2>
      </div>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <div class="bg-white p-4 rounded-lg shadow-sm">
        <div class="text-sm text-gray-500 font-medium">Âge</div>
        <div class="text-lg font-semibold text-gray-900">
          <%= @profile.age.present? ? "#{@profile.age} ans" : "Non renseigné" %>
        </div>
      </div>

      <div class="bg-white p-4 rounded-lg shadow-sm">
        <div class="text-sm text-gray-500 font-medium">Taille</div>
        <div class="text-lg font-semibold text-gray-900">
          <%= @profile.height.present? ? "#{@profile.height} cm" : "Non renseigné" %>
        </div>
      </div>

      <div class="bg-white p-4 rounded-lg shadow-sm">
        <div class="text-sm text-gray-500 font-medium">Poids</div>
        <div class="text-lg font-semibold text-gray-900">
          <%= @profile.weight.present? ? "#{@profile.weight} kg" : "Non renseigné" %>
        </div>
      </div>

      <div class="bg-white p-4 rounded-lg shadow-sm">
        <div class="text-sm text-gray-500 font-medium">Activité physique</div>
        <div class="text-lg font-semibold text-gray-900">
          <%= @profile.activity_level.present? ? @profile.activity_level_text : "Non renseigné" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Section Besoins caloriques -->
  <% if @profile.weight.present? && @profile.height.present? && @profile.age.present? %>
    <div class="bg-gray-50 rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Besoin calorique journalier</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="<%= @profile.goal.weight_loss? ? 'bg-blue-100 border-2 border-blue-500' : 'bg-white' %> p-4 rounded-lg shadow-sm transition-all duration-200">
          <div class="text-sm text-gray-500 font-medium">Perte de poids</div>
          <div class="text-lg font-semibold text-gray-900">
            <%= @daily_calorie_requirement_weight_loss %> kcal
          </div>
        </div>

        <div class="<%= @profile.goal.maintenance? ? 'bg-blue-100 border-2 border-blue-500' : 'bg-white' %> p-4 rounded-lg shadow-sm transition-all duration-200">
          <div class="text-sm text-gray-500 font-medium">Maintien</div>
          <div class="text-lg font-semibold text-gray-900">
            <%= @daily_calorie_requirement %> kcal
          </div>
        </div>

        <div class="<%= @profile.goal.muscle_gain? ? 'bg-blue-100 border-2 border-blue-500' : 'bg-white' %> p-4 rounded-lg shadow-sm transition-all duration-200">
          <div class="text-sm text-gray-500 font-medium">Prise de muscle</div>
          <div class="text-lg font-semibold text-gray-900">
            <%= @daily_calorie_requirement_muscle_gain %> kcal
          </div>
        </div>
      </div>
    </div>
  <% else %>
    <div class="bg-gradient-to-r from-yellow-50 to-orange-50 rounded-lg p-6 mb-6 border border-yellow-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center">
          <i class="fas fa-exclamation-triangle text-yellow-600 mr-3 text-xl"></i>
          <div>
            <h2 class="text-xl font-semibold text-yellow-800 mb-2">Besoin calorique non calculable</h2>
            <p class="text-yellow-700 text-sm">
              Pour calculer vos besoins caloriques journaliers, veuillez renseigner votre âge, votre taille et votre poids dans votre profil.
            </p>
          </div>
        </div>
        <%= link_to edit_profile_path, class: "inline-flex items-center px-4 py-2 bg-yellow-600 text-white rounded-lg shadow hover:bg-yellow-500 transition font-medium" do %>
          <i class="fas fa-user-edit mr-2"></i>
          Compléter le profil
        <% end %>
      </div>
    </div>
  <% end %>
</div>
