<div class="bg-white rounded-lg p-4 shadow-sm border border-blue-100">
  <div class="flex justify-between items-center mb-2">
    <h4 class="font-medium text-gray-700">Calories</h4>
    <span class="text-sm text-gray-500">
      <%= total_calories %> / <%= daily_calorie_goal %> kcal
    </span>
  </div>

  <div class="w-full bg-gray-200 rounded-full h-3 mb-2">
    <div class="h-3 rounded-full transition-all duration-300 <%= calories_percentage > 100 ? 'bg-red-500' : calories_percentage > 80 ? 'bg-yellow-500' : 'bg-green-500' %>"
         style="width: <%= [calories_percentage, 100].min %>%"></div>
  </div>

  <div class="flex justify-between items-center">
    <span class="text-sm font-medium <%= calories_percentage > 100 ? 'text-red-600' : calories_percentage > 80 ? 'text-yellow-600' : 'text-green-600' %>">
      <%= calories_percentage %>%
    </span>
    <% if calories_percentage > 100 %>
      <span class="text-xs text-red-600">
        +<%= (total_calories - daily_calorie_goal).round %> kcal
      </span>
    <% elsif calories_percentage < 100 %>
      <span class="text-xs text-blue-600">
        -<%= (daily_calorie_goal - total_calories).round %> kcal
      </span>
    <% end %>
  </div>
</div>
