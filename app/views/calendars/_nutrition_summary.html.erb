<div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl shadow-sm border border-blue-100 p-6">
  <div class="flex items-center mb-4">
    <i class="fas fa-chart-pie text-blue-600 mr-3 text-xl"></i>
    <h2 class="text-lg font-semibold text-blue-800">Résumé nutritionnel du jour</h2>
  </div>

  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="bg-white rounded-lg p-4 shadow-sm border border-blue-100 text-center hover:shadow-md transition-shadow">
      <div class="flex items-center justify-center mb-2">
        <i class="fas fa-fire text-blue-500 mr-2"></i>
        <div class="text-2xl font-bold text-blue-600"><%= total_calories %> kcal</div>
      </div>
      <div class="text-xs text-gray-500 mt-1"><%= Food.human_attribute_name(:calories) %></div>
    </div>

    <div class="bg-white rounded-lg p-4 shadow-sm border border-green-100 text-center hover:shadow-md transition-shadow">
      <div class="flex items-center justify-center mb-2">
        <i class="fas fa-dumbbell text-green-500 mr-2"></i>
        <div class="text-2xl font-bold text-green-600"><%= total_proteins %> g</div>
      </div>
      <div class="text-xs text-gray-500 mt-1"><%= Food.human_attribute_name(:proteins) %></div>
    </div>

    <div class="bg-white rounded-lg p-4 shadow-sm border border-yellow-100 text-center hover:shadow-md transition-shadow">
      <div class="flex items-center justify-center mb-2">
        <i class="fas fa-bread-slice text-yellow-500 mr-2"></i>
        <div class="text-2xl font-bold text-yellow-600"><%= total_carbs %> g</div>
      </div>
      <div class="text-xs text-gray-500 mt-1"><%= Food.human_attribute_name(:carbs) %></div>
    </div>

    <div class="bg-white rounded-lg p-4 shadow-sm border border-red-100 text-center hover:shadow-md transition-shadow">
      <div class="flex items-center justify-center mb-2">
        <i class="fas fa-oil-can text-red-500 mr-2"></i>
        <div class="text-2xl font-bold text-red-600"><%= total_fats %> g</div>
      </div>
      <div class="text-xs text-gray-500 mt-1"><%= Food.human_attribute_name(:fats) %></div>
    </div>

    <div class="bg-white rounded-lg p-4 shadow-sm border border-purple-100 text-center hover:shadow-md transition-shadow">
      <div class="flex items-center justify-center mb-2">
        <i class="fas fa-candy-cane text-purple-500 mr-2"></i>
        <div class="text-2xl font-bold text-purple-600"><%= total_sugars %> g</div>
      </div>
      <div class="text-xs text-gray-500 mt-1"><%= Food.human_attribute_name(:sugars) %></div>
    </div>
  </div>
</div>
