<div class="bg-white rounded-lg p-4 shadow-sm border border-red-100">
  <div class="flex justify-between items-center mb-2">
    <h4 class="font-medium text-gray-700">Lipides</h4>
    <span class="text-sm text-gray-500">
      <%= total_fats.round(1) %> / <%= daily_fats_goal.round(1) %> g
    </span>
  </div>

  <div class="w-full bg-gray-200 rounded-full h-3 mb-2">
    <div class="h-3 rounded-full transition-all duration-300 <%= fats_percentage > 100 ? 'bg-red-500' : fats_percentage > 80 ? 'bg-yellow-500' : 'bg-green-500' %>"
         style="width: <%= [fats_percentage, 100].min %>%"></div>
  </div>

  <div class="flex justify-between items-center">
    <span class="text-sm font-medium <%= fats_percentage > 100 ? 'text-red-600' : fats_percentage > 80 ? 'text-yellow-600' : 'text-green-600' %>">
      <%= fats_percentage %>%
    </span>
    <% if fats_percentage > 100 %>
      <span class="text-xs text-red-600">
        +<%= (total_fats - daily_fats_goal).round(1) %> g
      </span>
    <% elsif fats_percentage < 100 %>
      <span class="text-xs text-blue-600">
        -<%= (daily_fats_goal - total_fats).round(1) %> g
      </span>
    <% end %>
  </div>
</div>
