<h2 class="text-xl font-semibold text-gray-900 mb-6">Groupes de repas</h2>

<!-- Formulaire pour créer un nouveau groupe -->
<div class="bg-gray-50 p-6 rounded-lg mb-6">
  <%= simple_form_for @day_food_group, url: day_food_groups_path, html: { class: "flex items-end gap-4" } do |f| %>
    <div class="flex-1">
      <%= f.input :name,
          label: "Nom du groupe",
          placeholder: "Ex: Petit-déjeuner, Déjeuner, Dîner...",
          wrapper_html: { class: "mb-0" },
          input_html: { class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" } %>
    </div>
    <div>
      <%= f.submit "Créer le groupe",
          class: "bg-blue-800 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2" %>
    </div>
  <% end %>
</div>

<!-- Tableau des groupes existants -->
<div class="bg-white shadow-sm rounded-lg overflow-hidden">
  <% if @day_food_groups.any? %>
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Nom du groupe
          </th>
          <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @day_food_groups.each do |group| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="flex items-center">
                <i class="fas fa-utensils text-blue-500 mr-3"></i>
                <div class="text-sm font-medium text-gray-900"><%= group.name %></div>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to day_food_group_path(group),
                  data: {
                    "turbo-method": "delete",
                    "turbo-confirm": "Êtes-vous sûr de vouloir supprimer ce groupe ? Tous les repas associés seront également supprimés."
                  },
                  class: "text-red-600 hover:text-red-900 inline-flex items-center" do %>
                <i class="fas fa-trash mr-2"></i>
                Supprimer
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <div class="text-center py-12">
      <i class="fas fa-utensils text-gray-400 text-4xl mb-4"></i>
      <h3 class="text-lg font-medium text-gray-900 mb-2">Aucun groupe de repas</h3>
      <p class="text-gray-500 mb-4">Commencez par créer votre premier groupe de repas.</p>
      <p class="text-sm text-gray-400">
        Les groupes de repas vous permettent d'organiser vos aliments par catégories comme
        "Petit-déjeuner", "Déjeuner", "Dîner", "Collations", etc.
      </p>
    </div>
  <% end %>
</div>
