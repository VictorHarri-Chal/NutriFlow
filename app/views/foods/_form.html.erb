<%= simple_form_for(food) do |f| %>
  <%= render AlertComponent.new(title: "Renseignez les macros de l'aliment sur une base de 100g", level: "warning") %>
  <div class="grid grid-cols-1 gap-4">
    <%= f.input :name, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" } %>
    <%= f.input :brand, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" } %>
    <%= f.input :calories, step: 1, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" }, append: "kcal" %>

    <div class="grid grid-cols-2 gap-4">
      <%= f.input :proteins, step: 0.1, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" }, append: "g" %>
      <%= f.input :carbs, step: 0.1, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" }, append: "g" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <%= f.input :fats, step: 0.1, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" }, append: "g" %>
      <%= f.input :sugars, step: 0.1, input_html: { class: "w-full rounded border border-gray-300 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition" }, label_html: { class: "font-medium text-gray-700" }, append: "g" %>
    </div>

    <div class="form-group">
      <label class="font-medium text-gray-700 block mb-3">Labels d'aliments</label>
      <div class="grid grid-cols-2 gap-3 p-4 border border-gray-200 rounded-lg bg-gray-50">
        <% @food_labels.each do |label| %>
          <label class="flex items-center space-x-2 cursor-pointer hover:bg-gray-100 p-2 rounded transition">
            <%= check_box_tag "food[food_label_ids][]", label.id, food.food_labels.include?(label),
                class: "rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
            <span class="text-sm text-gray-700"><%= label.name %></span>
          </label>
        <% end %>
        <% if @food_labels.empty? %>
          <div class="col-span-2 text-center py-6 px-4">
            <div class="w-12 h-12 mx-auto mb-3 bg-gray-100 rounded-full flex items-center justify-center">
              <i class="fas fa-tag text-gray-400"></i>
            </div>
            <h3 class="text-sm font-medium text-gray-900 mb-1">Aucun label d'aliment</h3>
            <p class="text-gray-500 text-xs mb-3">Créez des labels d'aliments dans les paramètres</p>
          </div>
        <% end %>
      </div>
      <%= hidden_field_tag "food[food_label_ids][]", "" %>
    </div>
  </div>

  <div class="flex justify-center gap-4 mt-8">
    <%= link_to "Annuler", foods_path, class: "px-6 py-2 bg-gray-200 text-gray-800 rounded-lg shadow hover:bg-gray-300 transition font-semibold text-center text-sm" %>
    <%= f.button :submit, "Enregistrer", class: "px-6 py-2 bg-blue-800 text-white rounded-lg shadow hover:bg-blue-600 transition font-semibold text-center text-sm" %>
  </div>
<% end %>
